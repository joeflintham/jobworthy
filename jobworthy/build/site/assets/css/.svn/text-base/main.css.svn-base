@font-face {
  font-family: 'elsieregular';
  src: url("../fonts/elsie-regular-webfont.eot");
  src: url("../fonts/elsie-regular-webfont.eot?#iefix") format("embedded-opentype"), url("../fonts/elsie-regular-webfont.woff") format("woff"), url("../fonts/elsie-regular-webfont.ttf") format("truetype"), url("../fonts/elsie-regular-webfont.svg#elsieregular") format("svg");
  font-weight: normal;
  font-style: normal; }

.wrapper {
  position: relative;
  width: 960px;
  margin: 0 auto; }

/* defaults */
span.shrink {
  font-size: 70%; }

.cursive {
  font-family: elsieregular; }

.constrain-width {
  margin: 0 auto;
  width: 960px; }

.indent10 {
  margin-left: 10%; }

.indent20 {
  margin-left: 20%; }

.indent30 {
  margin-left: 30%; }

.tweenable {
  position: absolute;
  border: 1px solid rgba(255, 255, 255, 0); }

.centreable {
  position: relative;
  width: 100%; }

/* SCENES */
.scene {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 100%;
  overflow: hidden; }

/* specifics */
div#scene-one {
  background: #E6E6E6; }

div#scene-two {
  background: #63201B; }

.title {
  font-size: 3em;
  text-align: center; }
  .title h1 {
    display: inline-block;
    text-align: left;
    color: #7da5cb; }
    .title h1 span.shrink {
      font-size: 60%; }
